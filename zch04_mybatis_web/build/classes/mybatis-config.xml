<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="ldg.mybatis.model.Comment" alias="Comment" />
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/zmybatis_ldg" />
				<property name="username" value="root" />
				<property name="password" value="ZSql@" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<!-- ...SQL 매핑시 확인 사항 :
		        1. mybatis-config.xml :: mapper :: resource 속성값은 물리적인 파일경로와 일치해야 함.
		        2. CommentMapXmlRepository.java 와 CommentMapper.xml 의 
		           namespace 값이 일치해야 함.-->
		<mapper resource="ldg/mybatis/repository/mapper/CommentMapper.xml" />
		<mapper resource="ldg/mybatis/repository/mapper/CommentMapperWithResultMap.xml" />
	</mappers>
</configuration>